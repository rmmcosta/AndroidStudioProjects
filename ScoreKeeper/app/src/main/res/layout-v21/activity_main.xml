<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:padding="@dimen/main_padding"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTeam1Title"
        style="@style/team_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal"
        android:text="@string/team1_title" />

    <Button
        android:id="@+id/btnTeam1Decrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:text="@string/btn_decrease" />

    <TextView
        android:id="@+id/tvTeam1Score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:gravity="fill"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_column="1"
        android:text="@string/initial_score" />

    <Button
        android:id="@+id/btnTeam1Increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:text="@string/btn_increase" />

    <TextView
        android:id="@+id/tvTeam2Title"
        style="@style/team_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal"
        android:text="@string/team2_title" />

    <Button
        android:id="@+id/btnTeam2Decrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_decrease" />

    <TextView
        android:id="@+id/tvTeam2Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initial_score" />

    <Button
        android:id="@+id/btnTeam2Increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_increase" />
</GridLayout>