<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".SecondaryActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textSize="34sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_columnSpan="2"
        android:text="@string/secondary_activity_title" />

    <ImageView
        android:id="@+id/ivAndroid"
        style="@style/main_icons"
        android:layout_row="1"
        android:layout_column="0"
        android:contentDescription="@string/android_robot_description"
        android:onClick="goBack"
        android:transitionName="swap"
        app:srcCompat="@drawable/ic_baseline_android_24" />

    <ImageView
        android:id="@+id/ivRectangle"
        style="@style/main_icons"
        android:layout_row="1"
        android:layout_column="1"
        android:contentDescription="@string/blue_rectangle_description"
        app:srcCompat="@drawable/ic_rectangle" />

    <ImageView
        android:id="@+id/ivCircle"
        style="@style/main_icons"
        android:layout_row="2"
        android:layout_column="0"
        android:contentDescription="@string/red_circle_description"
        android:transitionName="swap"
        app:srcCompat="@drawable/ic_circle" />

    <ImageView
        android:id="@+id/ivSquare"
        style="@style/main_icons"
        android:layout_row="2"
        android:layout_column="1"
        android:contentDescription="@string/yellow_square_description"
        app:srcCompat="@drawable/ic_square" />

</GridLayout>