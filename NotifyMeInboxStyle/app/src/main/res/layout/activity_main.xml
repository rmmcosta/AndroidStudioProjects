<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/main_padding"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnNotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notify_btn_text" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_notification_btn_text"
        android:onClick="updateNotificationInboxStyle"/>

    <Button
        android:id="@+id/btnImageNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="sendImageNotification"
        android:text="@string/send_image_notification_btn_text" />

    <Button
        android:id="@+id/btnDownloadImageDM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="downloadImageDM"
        android:text="@string/download_manager_btn_text" />
</LinearLayout>