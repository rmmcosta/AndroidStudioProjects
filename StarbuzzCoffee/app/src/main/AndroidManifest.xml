<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.starbuzzcoffee">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_coffee"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_coffee_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StarbuzzCoffee">
        <activity
            android:name=".DrinkActivity"
            android:parentActivityName=".DrinkCategoryActivity" />
        <activity
            android:name=".DrinkCategoryActivity"
            android:parentActivityName=".TopLevelActivity" />
        <activity android:name=".TopLevelActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>